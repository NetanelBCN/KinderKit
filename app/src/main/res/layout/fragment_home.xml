<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.ui.home.HomeFragment"
    android:background="@drawable/family">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/FH_MTV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kinderkit"
        android:background="#DDF6E4"
        android:textSize="60sp"
        android:textStyle="bold|italic"
        android:textColor="#0AA0FA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/FH_RV_kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/FH_MTV_title"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>


</RelativeLayout>