<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.KidInfoActivity"
    android:background="@drawable/kidinfoback">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/FH_MTV_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kinderKit"
        android:background="#DDF6E4"
        android:textSize="50sp"
        android:textStyle="bold|italic"
        android:textColor="#0AA0FA"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/FH_SIV_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/FH_MTV_title"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="30dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Image.Circle"
        android:src="@drawable/eliya" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/FH_MTV_full_name"
        style="@style/MyTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FH_SIV_image"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="15dp"
        android:background="#F3F7F8FD"
        android:paddingHorizontal="10dp"
        android:text="Eliya Cohen"
        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/FH_MTV_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FH_MTV_full_name"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        android:background="#F3F7F8FD"
        android:paddingHorizontal="10dp"
        android:text="5 Years Old"
        style="@style/MyTextViewStyle"

        android:textSize="28sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/FH_MTV_bDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FH_MTV_age"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:background="#F3F7F8FD"
        android:paddingHorizontal="10dp"
        android:text="09/11/2018"
        style="@style/MyTextViewStyle"

        android:textSize="28sp"
        android:textStyle="bold" />

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/FH_MTV_bDay"
    android:id="@+id/FH_LLC_buttons"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"
    >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/FH_BTN_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_gallery"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#D8F313BB"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/FH_BTN_events"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/events"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#D8F313BB"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />
</androidx.appcompat.widget.LinearLayoutCompat>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/FH_BTN_immunization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Immunization_record"
        android:layout_below="@id/FH_LLC_buttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#0A3EFA"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/FH_BTN_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_kid"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/FH_BTN_immunization"
        android:layout_marginTop="45dp"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"

        />

</RelativeLayout>